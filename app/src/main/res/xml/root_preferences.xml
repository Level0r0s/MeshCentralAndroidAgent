<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/settings"
        app:icon="@drawable/ic_baseline_settings_24">
        <SwitchPreferenceCompat
            app:key="pref_autoconnect"
            app:title="Automatic Connection"
            app:summaryOn="Automatically connect to server"
            app:summaryOff="Only connect when requested"
            app:defaultValue="false"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:key="pref_autoconsent"
            app:title="Automatic Consent"
            app:summaryOn="Automatically give consent to remote agent"
            app:summaryOff="Always ask for consent when remote agent connects"
            app:defaultValue="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
</PreferenceScreen>